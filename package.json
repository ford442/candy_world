{
  "name": "candy_world",
  "version": "1.0.0",
  "description": "A 3D world of rudimentary, but sharp graphically nature - featuring smooth, glossy shapes in a pastel candy-colored landscape.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:asc && npm run build:cpp && vite build",
    "build:asc": "asc assembly/index.ts --target release --outFile public/build/optimized.wasm",
    "build:cpp": "emcc src/physics.cpp -O3 -s WASM=1 -s STANDALONE_WASM=1 --no-entry -o public/build/physics.wasm",
    "deploy": "npm run build && python3 deploy.py",
    "preview": "vite preview"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "three": "^0.171.0"
  },
  "devDependencies": {
    "assemblyscript": "^0.27.37",
    "http-server": "^14.1.1",
    "vite": "^5.0.0"
  }
}
